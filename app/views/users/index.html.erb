<div class="container mt-5">
  <div class="row d-flex justify-content-between">
    <div class="col-md-3">
      <%= render "user", user: current_user %>
      <%= render "magazines/make", magazine: @magazine %>
    </div>

    <div class="col-8 ml-5">
     <table class="table">
       <h2>USERS</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>
          <h4>Name</h4>
        </th>
        <th colspan="3"></th>
       </tr>
     </thead>
           <% @users.each do |user| %>
           <tbody>
              <tr>
                <td><%= link_to user_path(user) do %>
                     <%= image_tag user.get_profile(100, 100) %>
                    <% end %>
                </td>
                <th><h5 class="mt-3"><%= user.name%></h5></th>
                <td>
                  <%= link_to "show", user_path(user) ,class: "btn btn-outline-info btn-sm mt-3"%>
                </td>
              </tr>
          </tbody>
            <% end %>
     </table>
    </div>
  </div>

</div>
