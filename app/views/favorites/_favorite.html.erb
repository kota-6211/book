<% if magazines.favorited_by?(current_user) %>
   <%= link_to magazine_favorites_path(magazines), method: :delete, remote: true do %>
    <%= magazines.favorites.count %> ♥️
   <% end %>
<% else %>
   <%= link_to magazine_favorites_path(magazines), method: :post, remote: true do %>
    <%= magazines.favorites.count %> ♡️
   <% end %>
<% end %>
